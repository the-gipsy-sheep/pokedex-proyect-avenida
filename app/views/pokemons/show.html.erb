<% if @pokemon %>

  <h1 class="text-center mb-5"><%= @pokemon.id %> - <%= @pokemon.name.capitalize %></h1>
  <div class="container">
    <div class="card mb-3 mx-auto" style="max-width: 90%;">
      <div class="row g-0">
        <div class="col-md-4">
          <img src="https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/other/official-artwork/<%= @pokemon.id %>.png" class="img-fluid rounded-start" alt="<%= @pokemon.name %> image">
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title">Card title</h5>
            <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
            <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
            <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
            <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%= @pokemon.weight %>
  <%= @pokemon.height %>
  <%= @pokemon.types[0].type.name.capitalize %>
  <%= @pokemon.types[1].type.name.capitalize if @pokemon.types[1] %>
  <img src="<%= @pokemon.sprites.front_default %>" alt="<%= @pokemon.name %> image">
  <img src="https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/other/official-artwork/<%= @pokemon.id %>.png" alt="">

<% else %>
  <%= render "shared/error" %>
<% end %>
