<div class="container">
  <div class="container">
    <%= form_with url: pokemon_path(:params_query), method: :get do |form| %>
      <%= form.label :query, "Search for:" %>
      <%= form.text_field :query %>
      <%= form.submit "Search" %>
    <% end %>
  </div>
  <div class="row">
    <% @pokemons.each do |pokemon| %>
      <div class="col-4">
        <%= render "shared/index_card", pokemon: pokemon %>
      </div>
    <% end %>
  </div>
</div>
